<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/secondary"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clock_background"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <ImageView
            android:id="@+id/minuteHand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/minute"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/hourHand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hour"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/triangular"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="07:50"
            android:textColor="#2196f3"
            android:textSize="30sp" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/repeatLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="8dp"
        android:background="@drawable/circular_background"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="@id/guideline4"
        app:layout_constraintTop_toBottomOf="@id/rv2">

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />


        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintRight_toRightOf="@id/guideline6"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_cached_black_24dp"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintLeft_toRightOf="@id/iv"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_margin="3dp"

            android:text="5"
            android:textColor="#fff"
            android:textSize="25sp"
            android:gravity="center"
            />



    </android.support.constraint.ConstraintLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/repeatLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"


        >


    </ListView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />




</android.support.constraint.ConstraintLayout>